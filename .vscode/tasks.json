{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "trunk:dev",
      "type": "shell",
      "dependsOn": [
        "tailwindcss:watch",
        "trunk serve"
      ],
      "dependsOrder": "parallel",
      "runOptions": {
        "runOn": "folderOpen"
      },
    },
    {
      "label": "trunk serve",
      "type": "shell",
      "command": "trunk serve",
    },
    {
      "label": "trunk serve:sneu_tauri",
      "type": "shell",
      "command": "trunk serve --features sneu_tauri"
    },
    {
      "label": "trunk:build:release",
      "type": "shell",
      "command": "trunk build --release"
    },
    {
      "label": "tailwindcss:watch",
      "type": "shell",
      "command": "npx tailwindcss -i ./public/index.css -o ./dist/index.css --watch"
    },
    {
      "label": "tauri:dev",
      "type": "shell",
      "dependsOn": [
        "tailwindcss:watch",
        "trunk serve:sneu_tauri",
        "tauri dev"
      ],
      "dependsOrder": "parallel"
    },
    {
      "label": "tauri dev",
      "type": "shell",
      "command": "cargo tauri dev",
    },
    {
      "label": "tauri:build",
      "type": "shell",
      "command": "cargo tauri build",
      "runOptions": {}
    }
  ]
}
