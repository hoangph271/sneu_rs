{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve",
      "type": "shell",
      "command": "trunk serve",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "build:release",
      "type": "shell",
      "command": "trunk build --release"
    },
    {
      "label": "tailwindcss",
      "type": "shell",
      "command": "npx tailwindcss -i ./public/index.css -o ./dist/index.css --watch",
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
